<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentPopisPaketa"
    tools:context="com.coky.app.fragments.DonorPopisPaketa">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popisPaketa"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnNoviPaket">

    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnNoviPaket"
        android:src="@drawable/ic_action_compose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="4dp"
        app:backgroundTint="#FF0000"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
