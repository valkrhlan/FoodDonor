<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.coky.app.RegistracijaPravniKorisnik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_registracija_pravni">


<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

                <!-- EMAIL -->

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/editMailRP"
        android:layout_alignBottom="@+id/editMailRP"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_orange_dark"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editMailRP"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />

                <!-- LOZINKA -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Lozinka:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/editLozinkaRP"
        android:layout_alignBottom="@+id/editLozinkaRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editLozinkaRP"
        android:layout_below="@+id/editMailRP"
        android:layout_alignStart="@+id/editMailRP" />

                <!-- LOZINKA PONOVLJENA -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Lozinka (ponovljena):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_above="@+id/editOibRP"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/editPonovljenaRP"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:id="@+id/editPonovljenaRP"
        android:layout_below="@+id/editLozinkaRP"
        android:layout_alignStart="@+id/editLozinkaRP" />

                <!-- OIB -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="OIB:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/editOibRP"
        android:layout_alignBottom="@+id/editOibRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/editPonovljenaRP"
        android:layout_alignStart="@+id/editPonovljenaRP"
        android:id="@+id/editOibRP" />

                <!-- GRAD -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Grad:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/editGradRP"
        android:layout_alignBottom="@+id/editGradRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editOibRP"
        android:layout_alignStart="@+id/editOibRP"
        android:id="@+id/editGradRP"
        android:inputType="textPersonName"
        />

                <!-- ADRESA -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Adresa:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/editAdresaRP"
        android:layout_alignBottom="@+id/editAdresaRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editAdresaRP"
        android:layout_below="@+id/editGradRP"
        android:layout_alignStart="@+id/editGradRP" />

                <!-- KONTAKT -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Kontakt:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/editKontaktRP"
        android:layout_alignBottom="@+id/editKontaktRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editKontaktRP"
        android:layout_below="@+id/editAdresaRP"
        android:layout_alignStart="@+id/editAdresaRP" />

                <!-- NAZIV -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Naziv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBaseline="@+id/editNazivRP"
        android:layout_alignBottom="@+id/editNazivRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editKontaktRP"
        android:layout_alignEnd="@+id/editKontaktRP"
        android:id="@+id/editNazivRP" />

                <!-- IME -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Ime:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:layout_alignBaseline="@+id/editImeRP"
        android:layout_alignBottom="@+id/editImeRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editNazivRP"
        android:layout_alignStart="@+id/editNazivRP"
        android:id="@+id/editImeRP"
        android:inputType="textPersonName" />

                <!-- PREZIME -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Prezime:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:layout_alignBaseline="@+id/editPrezimeRP"
        android:layout_alignBottom="@+id/editPrezimeRP"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/editImeRP"
        android:layout_alignStart="@+id/editImeRP"
        android:id="@+id/editPrezimeRP"
        android:inputType="textPersonName" />

                <!-- TIP -->

    <TextView
        android:textColor="@android:color/holo_orange_dark"
        android:text="Tip:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPrezimeRP"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView3" />

    <RadioGroup
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:orientation="horizontal"

        android:layout_below="@+id/editPrezimeRP"
        android:layout_alignStart="@+id/editPrezimeRP"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="Donor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioDonorRP"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:text="Potrebiti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioPotrebitiRP"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="Registriraj se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/buttonRegistrirajSeRP"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/btn_default_small"
        tools:background="@android:drawable/btn_default" />

    <Button
        android:text="Odustani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOdustaniRP"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/btn_default_small"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/buttonRegistrirajSeRP"
        android:layout_alignBottom="@+id/buttonRegistrirajSeRP"/>

</RelativeLayout>
</ScrollView>