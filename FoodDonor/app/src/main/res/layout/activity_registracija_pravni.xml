<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.coky.app.RegistracijaPravniKorisnik"
    android:id="@+id/activity_registracija_pravni"
    android:fillViewport = "true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <RelativeLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    >

        <RadioGroup
        android:paddingLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/editPrezimeRP"
        android:weightSum="1"
        android:layout_alignEnd="@+id/buttonRegistrirajSeRP"
        android:layout_alignParentStart="true">

        <TextView

            android:text="Tip korisnika"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/textView3"
            android:layout_below="@+id/editPrezimeRP"
            android:layout_alignParentStart="true"
            android:layout_weight="0.65" />

        <RadioButton
            android:text="Donor"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioDonorRP"
            android:checked="true"
            android:layout_below="@+id/editPrezimeRP"
            android:layout_toStartOf="@+id/buttonOdustaniRP" />

        <RadioButton
            android:text="Potrebiti"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioPotrebitiRP"
            android:layout_toEndOf="@+id/radioDonorRP"
             />

    </RadioGroup>


        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editMailRP"
            android:hint="@string/irmail"
            android:fontFamily="sans-serif"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="300dp"
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editLozinkaRP"
            android:hint="@string/irloz"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/editMailRP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:id="@+id/editPonovljenaRP"
            android:hint="@string/irloz2"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/editLozinkaRP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editOibRP"
            android:hint="@string/iroib"
            android:layout_below="@+id/editPonovljenaRP"
            android:layout_alignStart="@+id/editPonovljenaRP" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editGradRP"
            android:inputType="textPersonName"
            android:hint="@string/irgrad"
            android:layout_below="@+id/editOibRP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAdresaRP"
            android:hint="@string/iradresa"
            android:layout_below="@+id/editGradRP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editKontaktRP"
            android:hint="@string/irkontakt"
            android:layout_below="@+id/editAdresaRP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNazivRP"
            android:hint="@string/irnaziv"
            android:layout_below="@+id/editKontaktRP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:paddingBottom="18dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editImeRP"
            android:inputType="textPersonName"
            android:hint="@string/irime"
            android:layout_below="@+id/editNazivRP"
            android:layout_alignStart="@+id/editNazivRP" />

        <EditText
            android:paddingBottom="25dp"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editPrezimeRP"
            android:inputType="textPersonName"
            android:hint="@string/irprezime"
            android:layout_below="@+id/editImeRP"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Registriraj se"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRegistrirajSeRP"
            android:background="@android:drawable/btn_default_small"
            tools:background="@android:drawable/btn_default"

            android:layout_below="@+id/radioGroup"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Odustani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOdustaniRP"
            android:background="@android:drawable/btn_default_small"

            android:layout_below="@+id/buttonRegistrirajSeRP"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>